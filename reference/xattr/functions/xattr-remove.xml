 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Remove todos os atributos extendidos de um arquivo</title>
    <programlisting role="php">
<![CDATA[
<?php
$arquivo = 'algum_arquivo';
$atributos = xattr_list($arquivo);

foreach ($atributos as $nome_do_atributo) {
    xattr_remove($arquivo, $nome_do_atributo);
}
?>
]]>
