<refentry xml:id="function.ovrimos-field-len" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>ovrimos_field_len</refname>
  <refpurpose>Retorna o tamanho da coluna</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>ovrimos_field_len</methodname>
   <methodparam><type>int</type><parameter>result_id</parameter></methodparam>
   <methodparam><type>int</type><parameter>field_number</parameter></methodparam>
  </methodsynopsis>
  <para>
   Obtém o tamanho da coluna especificada.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>result_id</parameter></term>
     <listitem>
      <para>
       Um identificador de resultado, retornado por <function>ovrimos_execute</function>
       ou <function>ovrimos_exec</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>field_number</parameter></term>
     <listitem>
      <para>
       O número do campo. Inicia em 1.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna o tamanho como um inteiro, ou &false; em erro.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ovrimos_field_name</function></member>
    <member><function>ovrimos_field_num</function></member>
    <member><function>ovrimos_field_type</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

