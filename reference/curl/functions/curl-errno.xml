<refentry xml:id='function.curl-errno' xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>curl_errno</refname>
  <refpurpose>Retorna o número do último erro</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>curl_errno</methodname>
   <methodparam><type>resource</type><parameter>ch</parameter></methodparam>
  </methodsynopsis>
  <para>
   Retorna o número do erro para a última operação cURL.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &curl.ch.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna o número do erro ou <literal>0</literal> (zero) caso nenhum
   erro tenha acontecido.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>curl_errno</function></title>
    <programlisting role="php">
<![CDATA[
<?php
// Cria uma nova sessão para uma página não existente
$ch = curl_init('http://404.php.net/');

// Executa
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
curl_exec($ch);

// Verifica se algum erro ocorreu
if(curl_errno($ch))
{
    echo 'Curl error: ' . curl_error($ch);
}

// Fecha a sessão
curl_close($ch);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>curl_error</function></member>
    <member><link xlink:href="&url.curl.error;">Códigos de erro cURL</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

