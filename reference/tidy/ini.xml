<section xml:id="tidy.configuration" xmlns="http://docbook.org/ns/docbook">
 &reftitle.runtime;
 &extension.runtime;
 <para>
  <table>
   <title>Opções de Configuração do Tidy</title>
   <tgroup cols="4">
    <thead>
     <row>
      <entry>Nome</entry>
      <entry>Padrão</entry>
      <entry>Modificável</entry>
      <entry>Changelog</entry>
     </row>
    </thead>
    <tbody>
     <row>
      <entry>tidy.default_config</entry>
      <entry>""</entry>
      <entry>PHP_INI_SYSTEM</entry>
      <entry>Disponível desde o PHP 5.0.0.</entry>
     </row>
     <row>
      <entry>tidy.clean_output</entry>
      <entry>"0"</entry>
      <entry>PHP_INI_USER</entry>
      <entry>PHP_INI_PERDIR no PHP 5. Disponível desde o PHP 5.0.0.</entry>
     </row>
    </tbody>
   </tgroup>
  </table>
  &ini.php.constants;
 </para>

 &ini.descriptions.title;

 <para>
  <variablelist>
   <varlistentry xml:id="ini.tidy.default-config">
    <term>
     <parameter>tidy.default_config</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Caminho padrão para o arquivo de configuração do tidy.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry xml:id="ini.tidy.clean-output">
    <term>
     <parameter>tidy.clean_output</parameter>
     <type>boolean</type>
    </term>
    <listitem>
     <para>
      Torna on/off a saída reparada pelo Tidy.
     </para>
     <warning>
      <para>
       Não torne on <literal>tidy.clean_output</literal> se você está gerando
       conteúdo não-html como imagens dinâmicas.
      </para>
     </warning>
    </listitem>
   </varlistentry>
  </variablelist>
 </para>

</section>

