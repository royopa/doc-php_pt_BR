 &ini.descriptions.title;

 <para>
  <variablelist>
   <varlistentry xml:id="ini.msql.allow-persistent">
    <term>
     <parameter>msql.allow_persistent</parameter>
     <type>boolean</type>
    </term>
    <listitem>
     <para>
      Quando permitir conexões persistentes mSQL.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.msql.max-persistent">
    <term>
     <parameter>msql.max_persistent</parameter>
     <type>integer</type>
    </term>
    <listitem>
     <para>
      O número máximo de conexões persistentes mSQL por processo.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.msql.max-links">
    <term>
     <parameter>msql.max_links</parameter>
     <type>integer</type>
    </term>
    <listitem>
     <para>
      O número máximo de conexões mSQL por processo, incluindo
      as conexões persistentes.
     </para>
    </listitem>
   </varlistentry>

  </variablelist>
 </para>
