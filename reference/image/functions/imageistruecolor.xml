 <refentry xml:id="function.imageistruecolor" xmlns="http://docbook.org/ns/docbook">
  <refnamediv>
   <refname>imageistruecolor</refname>
   <refpurpose>Indica quando uma imagem é uma imagem truecolor</refpurpose>
  </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
    <methodsynopsis>
     <type>bool</type><methodname>imageistruecolor</methodname>
     <methodparam><type>resource</type><parameter>image</parameter></methodparam>
    </methodsynopsis>
   <para>
    <function>imageistruecolor</function> indica quando a imagem 
    <parameter>image</parameter> é uma imagem truecolor.
   </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &gd.image.description;
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna &true; se o <parameter>image</parameter> é truecolor, &false;
   caso contrário.
  </para>
 </refsect1>
 <refsect1 role="notes">
    &reftitle.notes;
    &note.gd.2;
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
   <para>
     <simplelist>
      <member><function>imagecreatetruecolor</function></member>
     </simplelist>
   </para>
  </refsect1>
 </refentry>

