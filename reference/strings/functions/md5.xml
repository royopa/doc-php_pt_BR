 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Um exemplo da <function>md5</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$str = 'apple';

if (md5($str) === '1f3870be274f6c49b3e31a0c6728957f') {
    echo "Would you like a green or red apple?";
    exit;
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

